{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": "Lezione di un corso formativo con contenuto e quiz"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true,
      "description": "Contenuto della lezione"
    },
    "videoUrl": {
      "type": "string",
      "description": "URL del video della lezione (YouTube, Vimeo, ecc.)"
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 1,
      "description": "Ordine della lezione all'interno del corso"
    },
    "durationMinutes": {
      "type": "integer",
      "description": "Durata della lezione in minuti"
    },
    "isFree": {
      "type": "boolean",
      "default": false,
      "description": "Se true, questa lezione Ã¨ accessibile gratuitamente anche nei corsi premium"
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course",
      "inversedBy": "lessons"
    },
    "quiz": {
      "type": "component",
      "repeatable": true,
      "component": "course.quiz-question",
      "description": "Domande del quiz per questa lezione"
    }
  }
}
